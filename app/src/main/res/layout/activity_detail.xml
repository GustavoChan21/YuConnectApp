<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity"
    android:orientation="vertical"
    android:background="@color/white">

    <ImageView
        android:id="@+id/imageBackgroundPgDetail"
        android:layout_width="match_parent"
        android:layout_marginVertical="6dp"
        android:layout_height="wrap_content"
        android:src="@drawable/grutas_chocantes_logo"
        android:adjustViewBounds="true"
        android:scaleY="1"
        android:scaleX="1"
        />
    <View
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginTop="0dp"
        android:background="#ffffff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/imgLogoDetail"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:src="@drawable/grutas_chocantes"
            android:layout_gravity="center_horizontal"
            android:elevation="40dp"/>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="-72dp"
            android:backgroundTint="#54B435"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingTop="60dp">
                <TextView
                    android:id="@+id/title_store_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Grutas Chocantes"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:id="@+id/category_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-6dp"
                    android:fontFamily="@font/poppins"
                    android:text="Tirolesa y Recorridos Extremos"
                    android:textColor="@color/white"
                    android:textSize="14sp"/>

                <View
                    android:layout_width="160dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="4dp"
                    android:background="#ffffff"/>

                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_price"/>

                    <TextView
                        android:id="@+id/price_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="2dp"
                        android:fontFamily="@font/poppins"
                        android:text="100.00"
                        android:textColor="@color/white"
                        android:textSize="12dp"

                        android:textStyle="bold" />
                </LinearLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="16dp"
            android:background="#54B435"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            android:padding="14dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/description_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:fontFamily="@font/poppins"
                    android:textAlignment="gravity"
                    android:letterSpacing="0.1"
                    android:lineSpacingExtra="1dp"
                    android:text="Esta es información de prueba"
                    android:textColor="@color/white"
                    android:textSize="13sp"/>
            </LinearLayout>

        </ScrollView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"

        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"

            android:layout_height="32dp"
            android:paddingVertical="4dp"
            android:textAlignment="center"
            android:fontFamily="@font/poppins_semibold"
            android:layout_marginHorizontal="16dp"
            android:text="Horario"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:textColor="@color/black"/>
        <View
            android:layout_width="200dp"
            android:layout_gravity="center"
            android:layout_height="2.4dp"
            android:layout_marginTop="-10dp"
            android:background="#54B435"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="16dp"
            android:background="#54B435"
            android:layout_marginVertical="18dp"
            android:layout_weight="1"
            android:padding="14dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/horario_detail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins"
                    android:letterSpacing="0.1"
                    android:lineSpacingExtra="1dp"
                    android:text="Esta es información de prueba"
                    android:textAlignment="gravity"
                    android:textColor="@color/white"
                    android:textSize="13sp" />
            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_options_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.gcdev.yuconnect.menus.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_testActivity"
            app:destination="@id/testActivity" />
    </fragment>
    <fragment
        android:id="@+id/comunityFragment"
        android:name="com.gcdev.yuconnect.menus.ComunityFragment"
        android:label="fragment_comunity"
        tools:layout="@layout/fragment_comunity" />
    <fragment
        android:id="@+id/favoritesFragment"
        android:name="com.gcdev.yuconnect.menus.FavoritesFragment"
        android:label="fragment_favorites"
        tools:layout="@layout/fragment_favorites" />
    <fragment
        android:id="@+id/profileFragment"
        android:name="com.gcdev.yuconnect.menus.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/promotionsFragment"
        android:name="com.gcdev.yuconnect.menus.PromotionsFragment"
        android:label="fragment_promotions"
        tools:layout="@layout/fragment_promotions" />
    <fragment
        android:id="@+id/collaboratorFragment"
        android:name="com.gcdev.yuconnect.menus.CollaboratorFragment"
        android:label="fragment_collaborator"
        tools:layout="@layout/fragment_collaborator" />
    <activity
        android:id="@+id/testActivity"
        android:name="com.gcdev.yuconnect.TestActivity"
        android:label="activity_test"
        tools:layout="@layout/activity_test" />
    <activity
        android:id="@+id/categoryResultActivity"
        android:name="com.gcdev.yuconnect.CategoryResultActivity"
        android:label="activity_category_result"
        tools:layout="@layout/activity_category_result" />
    <activity
        android:id="@+id/homeActivity"
        android:name="com.gcdev.yuconnect.HomeActivity"
        android:label="activity_home"
        tools:layout="@layout/activity_home" />
    <activity
        android:id="@+id/detailActivity"
        android:name="com.gcdev.yuconnect.DetailActivity"
        android:label="activity_detail"
        tools:layout="@layout/activity_detail" />
</navigation>